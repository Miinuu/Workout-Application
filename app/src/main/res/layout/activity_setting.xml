<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:text="설 정"
        android:fontFamily="@font/jamsil_bold"
        android:textColor="@color/blue"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="닉네임"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="닉"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/buttonChangeNickname"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="showChangeNicknamePopup"
                android:text="닉네임 변경"
                android:fontFamily="@font/jamsil_regular"
                android:textSize="16sp"

                android:textColor="@color/white_to_blue"
                android:background="@drawable/round_blue_button"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="성별"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textViewGender"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/buttonChangeGender"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="showChangeGenderPopup"
                android:text="성별 변경"
                android:fontFamily="@font/jamsil_regular"
                android:textSize="16sp"

                android:textColor="@color/white_to_blue"
                android:background="@drawable/round_blue_button"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="장소"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/buttonChangeLocation"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="showChangeLocationPopup"
                android:text="장소 변경"
                android:fontFamily="@font/jamsil_regular"
                android:textSize="16sp"

                android:textColor="@color/white_to_blue"
                android:background="@drawable/round_blue_button"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="수준"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textViewClass"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/buttonChangeClass"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="showChangeClassPopup"
                android:text="수준 변경"
                android:fontFamily="@font/jamsil_regular"
                android:textSize="16sp"

                android:textColor="@color/white_to_blue"
                android:background="@drawable/round_blue_button"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="키"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textViewHeight"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/buttonChangeHeight"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="showChangeHeightPopup"
                android:text="키 변경"
                android:fontFamily="@font/jamsil_regular"
                android:textSize="16sp"

                android:textColor="@color/white_to_blue"
                android:background="@drawable/round_blue_button"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="생년월일"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textViewBirth"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:fontFamily="@font/jamsil_regular"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/buttonChangeBirthday"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:onClick="showChangeNicknamePopup"
                android:text="생일 변경"
                android:fontFamily="@font/jamsil_regular"
                android:textSize="16sp"

                android:textColor="@color/white_to_blue"
                android:background="@drawable/round_blue_button"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="showChangedeletePopup"
            android:text="로그아웃"
            android:fontFamily="@font/jamsil_regular"
            android:textSize="16sp"

            android:textColor="@color/white_to_blue"
            android:background="@drawable/round_blue_button"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnWithdrawal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="showChangedeletePopup"
            android:text="탈퇴하기"
            android:fontFamily="@font/jamsil_regular"
            android:textSize="16sp"

            android:textColor="@color/white_to_blue"
            android:background="@drawable/round_blue_button"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="showChangeCallPopup"
            android:text="고객센터"
            android:fontFamily="@font/jamsil_regular"
            android:textSize="16sp"

            android:textColor="@color/white_to_blue"
            android:background="@drawable/round_blue_button"

            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btnVersion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="VERSION (V1.0.0)"
            android:fontFamily="@font/jamsil_regular"
            android:textSize="16sp"

            android:textColor="@color/white_to_blue"
            android:background="@drawable/round_blue_button"

            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>