<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".QuestionActivity1">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/jamsil_bold"
        android:text="성별"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressbarPercent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/jamsil_regular"
        android:text="성별이 어떻게 되시나요?"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressbarPercent" />

    <TextView
        android:id="@+id/txtQuestionExplane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/jamsil_regular"
        android:text="사용자의 정보는 외부에 공개되지 않아요."
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtQuestion" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/btnMale"
            android:layout_width="380dp"
            android:layout_height="48dp"
            android:layout_marginVertical="35dp"
            android:background="@drawable/rounded_grey_radiobutton"
            android:fontFamily="@font/jamsil_regular"
            android:textSize="15sp"
            android:text="남성"
            android:textColor="@drawable/white_to_black_raido_text"
            android:gravity="center"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/btnFemale"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginVertical="35dp"
            android:background="@drawable/rounded_grey_radiobutton"
            android:fontFamily="@font/jamsil_regular"
            android:textSize="15sp"
            android:text="여성"
            android:textColor="@drawable/white_to_black_raido_text"
            android:gravity="center"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/btnEtc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginVertical="35dp"
            android:textSize="15sp"
            android:background="@drawable/rounded_grey_radiobutton"
            android:fontFamily="@font/jamsil_regular"
            android:text="기타"
            android:textColor="@drawable/white_to_black_raido_text"
            android:gravity="center"
            android:button="@null" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>